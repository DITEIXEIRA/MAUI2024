<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Animations.BasicAnimation"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BasicAnimation">
    <VerticalStackLayout>
        <Border HeightRequest="300">
            <Image
                x:Name="Image"
                Source="dotnet_bot.png"
                WidthRequest="100" />
        </Border>

        <Button Clicked="Normal" Text="Normal" />
        <Button Clicked="Aumentar" Text="Aumentar" />
        <Button Clicked="Diminuir" Text="Diminuir" />
        <Button Clicked="Mover" Text="Mover" />
        <Button Clicked="Rotacao" Text="Rotação" />
    </VerticalStackLayout>
</ContentPage>